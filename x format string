package day1z;
import java.util.*;
public class Day1z {
	public static void main(String[] args) {
		Scanner s=new Scanner(System.in);
	
		String str=s.nextLine();
		int len=str.length();
		for(int i=0;i<len;i++) {
			for(int j=0;j<len;j++) {
				if((i==j) || (i+j==len-1))	{
					System.out.print(str.charAt(j));
					}
				else
					System.out.print(" ");
				}
			System.out.println();
		}

	}		
}
	
	
